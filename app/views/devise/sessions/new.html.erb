<div id="page-content login_page">
  
  <div class="content padded">
    
    <div  class="row">
      
      <div class="col-md-6 col-md-offset-3 well">

      <h4>Zaloguj</h4>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal' }) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            
            <div class="input-group">
              <%= f.input :email, label: false do %>
                <div class="input-group">
                  <%= f.input_field :email, class: 'form-control', placeholder: 'Email' %>
                  <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                </div>
              <% end %></br>
            </div>

            <div class="input-group">
              <%= f.input :password, label: false do %>
                <div class="input-group">
                  <%= f.input_field :password, class: 'form-control', placeholder: 'Hasło' %>
                  <span class="input-group-addon glyphicon glyphicon-lock"></span>
                </div>
              <% end %>
            </div>

              <div class="checkbox">  
                <%= f.input :remember_me, as: :boolean, :label => false, :inline_label => "Zapamiętaj mnie" if devise_mapping.rememberable? %>
              </div>
          </div>


            <div class="form-actions">
              <%= f.button :submit, "Zaloguj", class: 'btn btn-black btn-block btn-sm' %>
            </div>
        <% end %></br>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>