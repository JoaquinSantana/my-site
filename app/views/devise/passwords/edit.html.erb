<div id="page-content res_pass">
  
  <div class="content padded">
    
    <div  class="row">
      
      <div class="col-md-6 col-md-offset-3 well">

      <h2>Zmień swoje hasło</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

           <div class="input-group">
            <%= f.input :password, label: false, required: true, autofocus: true do %>
              <div class="input-group">
                <%= f.input_field :password, class: 'form-control', placeholder: 'Nowe hasło' %>
              <span class="input-group-addon glyphicon glyphicon-lock"></span>
              </div>
            <% end %></br>
          </div>

          <div class="input-group">
            <%= f.input :password_confirmation, label: false, required: true do %>
              <div class="input-group">
                <%= f.input_field :password_confirmation, class: 'form-control', placeholder: 'Potwierdź nowe hasło' %>
              <span class="input-group-addon glyphicon glyphicon-lock"></span>
              </div>
            <% end %></br>
          </div>
          
        </div>

          <div class="form-actions">
            <%= f.button :submit, "Zmień moje hasło", class: 'btn btn-black btn-block btn-sm' %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>