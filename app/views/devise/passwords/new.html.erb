<div id="page-content res_pass">
  
  <div class="content padded">
    
    <div  class="row">
      
      <div class="col-md-6 col-md-offset-3 well">

      <h4>Zapomniałeś hasła?</h4>

	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            
            <div class="input-group">
              <%= f.input :email, label: false do %>
                <div class="input-group">
                  <%= f.input_field :email, class: 'form-control', placeholder: 'Email' %>
                  <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                  </div>
            <% end %></br>
          </div>


            <div class="form-actions">
              <%= f.button :submit, "Wyślij instrukcję dotyczącą zmiany hasła", class: 'btn btn-black btn-block btn-sm' %>
            </div>
        <% end %></br>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>