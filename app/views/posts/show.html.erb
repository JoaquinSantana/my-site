<div id="page-content">

	<!-- Page Title -->
	<div class="page-title bottom-padded">
    	
        <!-- Page Title Background -->
    	<div class="page-title-bg editable-alpha" data-alpha="10"><img src="images/blog/post-big_01.jpg" alt="" /></div>
        
        <div class="content padded">
        
          <!-- Top Bar -->
          <div class="top-bar">
            <!-- Go Back -->
            <div class="pull-left">
              <%= link_to posts_path, class: "btn btn-default btn-pull-up" do %>
                <i class="icon-before fa fa-chevron-left">   Blog</i>
              <% end %>
                
            </div>
            <!-- Heading -->
            <div class="pull-right">
                <h6>www.tpanek.pl</h6>
            </div>
          </div>
          
          <!-- Page Title Content -->
          <div class="padded-vertical">
          	<span class="post-date-alt"><%= l @post.created_at %></span>
            <h1 class="medium"><%= @post.title %></h1>
            <div class="post-meta pull-left">
                <span><i class="fa fa-comment"></i><a href="#"><%= @post.comments.persisted.size %></a></span>
                <span><i class="fa fa-tag"></i><a href="#">Webdesign</a></span>
            </div>
          </div>
          
        </div>
          
    </div>
    
    <!-- Page Content -->
    <div class="container content">
    
      <div class="row">
      
      	<div class="col-lg-12">

        	<p class="lead"><%= @post.description %></p>

          <p><%= @post.body.html_safe %></p>
            
            <div class="row">
            
            	<div class="col-lg-8">
            
                  <!-- Comments -->
                  <h4>Komentarze</h4>
                  <ul class="comments-list">
                   <% if @post && @post.comments.count >= 1 %>
                      <!-- Single comment -->
                      <%= render @post.comments %>
                    <% end %>
                  </ul>   
                </div>
                
                <div class="col-lg-4 formularz">
            
                  <!-- Comments -->
                  <h4>Napisz sw√≥j komentarz</h4>
        
                  <%= render 'comments/form' %>

                </div>
                
            </div>
                
          </div>
      
      </div>
      
      <!-- Bottom Bar -->
      <div class="bottom-bar">
      
          <!-- Contact List -->
          <ul class="list-inline">
            <li><i class="inline-icon icon-before-and-after text-primary fa fa-comment"></i><a href="#">tomekkpanek@gmail.com</a></li>
          </ul>
       
      </div>
        
    </div>
	
</div>
<!-- Page Content / End -->