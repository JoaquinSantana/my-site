<div id="page-content">

	<!-- Page Title -->
	<div class="page-title bottom-padded">
    	
        <!-- Page Title Background -->
    	<div class="page-title-bg editable-alpha" data-alpha="10"><img src="images/blog/post-big_01.jpg" alt="" /></div>
        
        <div class="content padded">
        
          <!-- Top Bar -->
          <div class="top-bar">
            <!-- Go Back -->
            <div class="pull-left">
              <%= link_to posts_path, class: "btn btn-default btn-pull-up" do %>
                <i class="icon-before fa fa-chevron-left">   Blog</i>
              <% end %>
                
            </div>
            <!-- Heading -->
            <div class="pull-right">
                <h6>www.tpanek.pl</h6>
            </div>
          </div>
          
          <!-- Page Title Content -->
          <div class="padded-vertical">
          	<span class="post-date-alt"><%= l @post.created_at %></span>
            <h1 class="medium"><%= @post.title %></h1>
            <div class="post-meta pull-left">
                <span><i class="fa fa-comment"></i><a href="#">4 comments</a></span>
                <span><i class="fa fa-tag"></i><a href="#">Webdesign</a></span>
            </div>
          </div>
          
        </div>
          
    </div>
    
    <!-- Page Content -->
    <div class="container content">
    
      <div class="row">
      
      	<div class="col-lg-12">

        	<p class="lead"><%= @post.description %></p>

          <p><%= @post.body.html_safe %></p>
            
            <div class="row">
            
            	<div class="col-lg-8">
            
                  <!-- Comments -->
                  <h4>Komentarze</h4>
                  <ul class="comments-list">
                      <!-- Single comment -->

                      <% @post.comments.each do |c| %>

                        <li class="comment">
                            <div class="comment-avatar"><img src="images/anonymous.jpg" alt="" /></div>
                            <div class="comment-content">
                                <div class="comment-meta">
                                    <span class="comment-author"><%= c.podpis %></span>
                                    <span class="comment-reply"><a href="#">Reply</a></span>
                                    <span class="comment-date"><%= l c.created_at %></span>
                                </div>
                                <div class="comment-text">
                                    <%= c.komentarz %>
                                </div>
                            </div>
                        </li>
                      <% end %>
                  </ul>   
                </div>
                
                <div class="col-lg-4 well">
            
                  <!-- Comments -->
                  <h4>Napisz sw√≥j komentarz</h4>


                  <%= render 'comments/form' %>

