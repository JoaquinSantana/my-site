<% if comment.persisted? %>
  <li class="comment ">
    <div class="comment-content post-content">
        <div class="comment-meta">
            <span class="comment-author"><%= comment.podpis %></span>
            <% from_reply_form ||= nil %>
            <% unless from_reply_form %>
              <span class="comment-reply"><%= link_to "Odpisz", new_comment_path(@post, comment.id) %></span>
            <% end %>
            <span class="comment-date">
              <% if comment.persisted? %> 
                <%= l comment.created_at %>
              <% end %>
            </span>
            <span class="comment-reply">
              <% if user_signed_in? && comment.persisted? %>
                <%= link_to "Edytuj", edit_post_comment_path(@post, comment) %>
                <%= link_to "Usuń", [@post, comment], method: :delete, data: { confirm: "Czy chcesz usunąć ten wpis?" } %>
              <% end %>
            </span>
        </div>
      <div class="comment-text">
          <%= comment.komentarz %>
      </div>
     </div>
  </li>
<% end %>